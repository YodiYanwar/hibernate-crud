<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.yodiyanwar.model.Person" table="person">
      <id name="nik" column="nik"/>
      <property name="nama" column="nama" length="35"/>
      <property name="alamat" column="alamat" length="75"/>
